# LAMP etc
sudo apt-get update && sudo apt-get install apache2 php5 mysql-server php5-mysql php5-json php5-curl php5-gd php5-imagick php5-mcrypt git-core curl && sudo a2enmod rewrite && sudo service apache2 restart

# Sass
sudo apt-get install ruby-full rubygems && sudo gem install sass && sudo gem install compass

# Composer
curl -sS https://getcomposer.org/installer | php && sudo mv composer.phar /usr/local/bin/composer

# General
sudo apt-get install sshfs rar